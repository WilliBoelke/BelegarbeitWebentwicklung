<% if cookies[:dark] %>
	<%= stylesheet_link_tag 'nav_bar_dark', media: 'all', 'data-turbolinks-track': 'reload' %>
<% else %>
	<%= stylesheet_link_tag 'nav_bar_light', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>
<nav class="navbar navbar-expand-md background-dark sticky-top">
	<div class="container-fluid">
		<div class="branding">
			<%= link_to "onlineshop", shop_path, class: "branding" %>
		</div>
		<button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#navbarResposive">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarResposive">
			<ul class="navbar-nav ml-auto">
				<li class="nav-item">
					<%= link_to (t "layouts.header.shop"), shop_path, class: "nav-link-font nav-link" %>
				</li>
				<li class="nav-item">
					<%= link_to (t "layouts.header.recent"), shop_path, class: "nav-link-font nav-link" %>
				</li>
				<li class="nav-item">
					<%= link_to (t "layouts.header.cart"), shop_path, class: "nav-link-font nav-link" %>
				</li>

				<!--Settings Dropdown-->
				<li class="nav-item">
					<div class="dropdown">
						<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							<%= t "layouts.header.settings" %>
						</button>
						<div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
							<ul>
								<!--Darkmode Toggle-->
								<br>
								<p class="h6">
									<%= t ('layouts.header.appearance') %>
									<br>
								<p>
								<li>
									<% if cookies[:dark] %>
										<%= link_to 'Light Mode', class: 'dropdown-item' %>
									<% else %>
										<%= link_to 'Dark Mode', class: 'dropdown-item' %>
									<% end %>
								</li>
								<!--Languages-->
								<br>
								<p class="h6">
									<%= t ('layouts.header.languages') %>
									<br>
								<p>
								<li>
									<%= link_to_unless_current t('layouts.header.german'), locale_path(locale: 'de'), method: :post, class: 'dropdown-item' %>
								</li>
								<li>
									<%= link_to_unless_current t('layouts.header.english'), locale_path(locale: 'en'), method: :post, class: 'dropdown-item' %>
								</li>
							</ul>
						</div>
					</div>
				</li>
				<li class="nav-item">
					<div class="dropdown">
						<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
										aria-haspopup="true" aria-expanded="false">
							Setting
						</button>
						<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							<% if cookies[:dark] %>
								<%= button_to 'Light Mode', light_path %>
							<% else %>
								<%= button_to 'Dark Mode', dark_path %>
							<% end %>
						</div>
					</div>
				</li>
			</ul>
			<ul class="right navbar-nav">
				<% if signed_in? %>
					<li>
						<%= link_to current_user.name, "profile" , class: "nav-link-font nav-auth" %>
					</li>
					<li class=" av-link-font nav-auth ">
						<%= link_to "logout", destroy_user_session_path, method: :delete  %>
					</li>
				<% else %>
					<li>
						<%= link_to "Register", new_user_registration_path , class: "nav-link-font nav-auth"%>
					</li>
					<li>
						<%= link_to "Login", new_user_session_path , class: "nav-link-font nav-auth"%>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</nav>







