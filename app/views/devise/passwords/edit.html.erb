<% if cookies[:dark] %>
	<%= stylesheet_link_tag 'forms_dark', media: 'all', 'data-turbolinks-track': 'reload' %>
<% else %>
	<%= stylesheet_link_tag 'forms_light', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<div class="content-container content-container-margin content-container-padding">
	<h2>Change your password</h2>
	<br>
	<br>
	
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
		<%= render "devise/shared/error_messages", resource: resource %>
		<%= f.hidden_field :reset_password_token %>

		<!--Password-->
		<div class="row">
			<div class="form-group col-md-4">
				<%= f.password_field :password, class: "form-control form-background", placeholder: "Password" %>
			</div>
		</div>

		<!--New Password Confirmation-->
		<div class="row">
			<div class="form-group col-md-4">
				<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-background", placeholder: "Password confirmation"%>
			</div>
		</div>

		<!--Submit button-->
		<div class="actions">
			<%= f.submit "Update", class: "btn btn-primary bg-success border-0" %>
		</div>
	<% end %>
</div>
<div class="content-container content-container-margin content-container-padding">
	<%= render "devise/shared/links" %>
</div>
