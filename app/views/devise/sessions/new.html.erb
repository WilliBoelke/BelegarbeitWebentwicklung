<% if cookies[:dark] %>
	<%= stylesheet_link_tag 'forms_dark', media: 'all', 'data-turbolinks-track': 'reload' %>
<% else %>
	<%= stylesheet_link_tag 'forms_light', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<div class="content-container">
	<h2>Log in</h2>
	<br>

	<!--Email Form-->
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="field">
			<%= f.email_field :email, autofocus: true, autocomplete: "email", class: " form-background", placeholder: "Email" %>
		</div>
		<br>

		<!--Password Form-->
		<div class="field">
			<%= f.password_field :password, autocomplete: "current-password", class: " form-background", placeholder: "Password" %>
		</div>
		<br>

		<!--Remember Check-Box-->
		<% if devise_mapping.rememberable? %>
			<div class="field">
				<%= f.check_box :remember_me %>
				<%= f.label :remember_me %>
			</div>
		<% end %>
		<br>

		<!--LogIn Button-->
		<div class="actions">
			<%= f.submit "Log in", class: "btn btn-default pull-right bg-success border-0" %>
		</div>
		<br>
	<% end %>
</div>

<div class="content-container">
	<!--Devise Links-->
	<%= render "devise/shared/links" %>
</div>
